header.header
  nav.nav.nav--tours
    a.header__logo(href='/')
        img(src='/img/logo.png' alt='flux logo')
    form.nav__search
      button.nav__search-btn
        svg
          use(xlink:href='/img/icon.svg#icon-search')
      input.nav__search-input(type='text' placeholder='Search tours')
  nav.nav.nav--user#navbtn
    a#linkall.nav__el(href='/') All tours
    if user
      a.nav__el#loglog.nav__el--logout Log out
      a.nav__el#loglog2(href='/account')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el#loglog(href='/login') Log in
      a.nav__el#loglog2.nav__el--cta(href='/signup') Sign up